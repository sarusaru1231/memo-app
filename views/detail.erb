<main>
  <div class="header">
    <h1>Memo 詳細</h1>
  </div>
  <div class="content w-auto">
    <dl class="row">
      <dt class="col-sm-3">ID</dt>
      <dd class="col-sm-9"><%=h(@memo.id)%></dd>
      <dt class="col-sm-3">Title</dt>
      <dd class="col-sm-9"><%=h(@memo.title)%></dd>
      <dt class="col-sm-3">Content</dt>
      <dd class="col-sm-9"><%=h(@memo.content)%></dd>
    </dl>
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
      <a role="button" class="btn btn-primary" href="<%=@edit_link%>">編集する</a>
      <a role="button" class="btn btn-outline-primary" href="/">一覧へ</a>
    </div>
  </div>
</main>
